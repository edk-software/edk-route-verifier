{
  "name": "edk-route-verifier",
  "version": "1.1.1",
  "description": "Extreme Way of the Cross project route verifier",
  "main": "edk-route-verifier.js",
  "scripts": {
    "clean": "rm -rf server/static/js/edk-route-verifier.* dist/edk-route-verifier.*",
    "start": "cd server && npm run start",
    "start:dev": "cross-env NODE_ENV=development npm run start",
    "start:prod": "cross-env NODE_ENV=production npm run start",
    "test": "npm run check:source && nightwatch -c test/nightwatch.conf.js",
    "version:patch": "npm version patch",
    "git:branch": "cross-var git branch $npm_package_version && cross-var git checkout $npm_package_version",
    "git:commit": "git add -f dist/* && git commit -m \"Added artifacts for new version\"",
    "git:push": "cross-var git push --tags origin HEAD:$npm_package_version",
    "deploy:clean": "git checkout master && cross-var git branch -D $npm_package_version && cross-var git tag -d v$npm_package_version",
    "deploy:current": "npm run build:prod && npm test && npm run git:branch && npm run build:dist && npm run git:commit && cross-var git tag v$npm_package_version && npm run git:push",
    "deploy:next": "npm run build:prod && npm test && npm run git:branch && npm run build:dist && npm run git:commit && npm run version:patch && npm run git:push",
    "build:dev": "webpack --config webpack.config.js --mode development",
    "build:prod": "webpack --config webpack.config.js --mode production",
    "build:dist": "concurrently  \"webpack --config webpack.config.js --mode production --env.DIST\" \"webpack --config webpack.config.js --mode development --env.DIST\"",
    "check:source": "eslint src/** --cache --max-warnings 10"
  },
  "author": "Jakub Niezgoda (qooban)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/edk-software/edk-route-verifier.git"
  },
  "dependencies": {
    "@turf/distance": "^6.0.1",
    "@turf/flatten": "^5.1.5",
    "@turf/point-on-line": "^5.0.3",
    "chart.js": "^2.7.2",
    "lodash": "^4.17.11",
    "loglevel": "^1.6.1",
    "togeojson": "^0.16.0"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "brfs": "^2.0.2",
    "chrome-driver-standalone": "^2.37.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "cross-var": "^1.1.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "nightwatch": "^1.0.19",
    "selenium-server-standalone-jar": "^3.141.5",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3"
  }
}
