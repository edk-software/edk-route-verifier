{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "rules" : {
        "indent" : ["error", 4],
        "no-unused-vars" : 0,
        "class-methods-use-this" : 0,
        "no-unused-expressions" : [2, {
            "allowShortCircuit": false,
            "allowTernary": true,
            "allowTaggedTemplates": false
        }],
        "radix" : 0,
        "no-plusplus" : 0,
        "no-new" : 0,
        "function-paren-newline" : ["error", "never"],
        "prefer-promise-reject-errors" : 0,
        "no-mixed-operators" : 0,
        "import/no-extraneous-dependencies": 0,
        "import/extensions": 0,
        "no-underscore-dangle" : ["error", {
            "allow" : [
                "_"
            ]
        }],
        "prefer-destructuring": 0,
        "no-param-reassign" : 0,
        "no-useless-escape" : 0,
        "consistent-return" : 0,
        "arrow-parens"      : ["error", "as-needed"],
        "no-shadow"         : 0,
        "max-len"           : ["error", {
            "code": 120
        }]
    },
    "env" : {
        "jquery"  : true,
        "node" : true
    },
    "globals" : {
        "Chart"  : true,
        "google" : true
    }
}