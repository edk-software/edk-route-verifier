{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": "airbnb-base",
    "rules" : {
        "indent" : ["error", 4],
        "no-unused-vars" : 0,
        "class-methods-use-this" : 0,
        "no-used-expressions" : [2, {
            "allowShortCircuit": false,
            "allowTernary": true,
            "allowTaggedTemplates": false
        }],
        "radix" : 0,
        "no-plusplus" : 0,
        "no-new" : 0,
        "function-paren-newline" : ["error", "never"],
        "prefer-promise-reject-errors" : 0,
        "no-mixed-operators" : 0
    },
    "env" : {
        "jquery"  : true,
        "browser" : true
    },
    "globals" : {
        "Chart"  : true,
        "google" : true
    }
}